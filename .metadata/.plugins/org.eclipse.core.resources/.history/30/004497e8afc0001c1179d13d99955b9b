public class Ex5_19 {
	public static void main(String[] args) {
		int[][] score = {						//[가로][세로]
						{100,100,100},
						{20,20,20},
						{30,30,30},
						{40,40,40},
						{50,50,50}
						};
		
		int korTotal =0, engTotal =0, mathTotal =0;
		
		System.out.println("번호 국어 영어 수학 총점 평균");
		System.out.println("=====================");
		
		for(int i=0; i<score.length; i++) {
			int sum =0;
			float avg = 0.0f;
			
			korTotal += score[i][0];
			engTotal += score[i][1];
			mathTotal += score[i][2];
			System.out.printf("%3d", i+1);
			
		}
	}   //main
}